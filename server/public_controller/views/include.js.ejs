<script>  

  function notificationToast (message, toast_type='info', timeOut='5000'){
  //https://codeseven.github.io/toastr/demo.html
    toastr.options = {
      "closeButton": true,
      "debug": false,
      "newestOnTop": true,
      "progressBar": true,
      "positionClass": "toast-top-right",
      "preventDuplicates": false,
      "onclick": null,
      "showDuration": '300',
      "hideDuration": "1000",
      "timeOut": timeOut,
      "extendedTimeOut": "1000",
      "showEasing": "swing",
      "hideEasing": "linear",
      "showMethod": "fadeIn",
      "hideMethod": "fadeOut"
    }
    toastr[toast_type](message);
  }
</script>  